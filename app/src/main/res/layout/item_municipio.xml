<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="4dp"
    android:paddingBottom="4dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/bg_card_white">

    <!-- Header horizontal - Sección del municipio -->
    <LinearLayout
        android:id="@+id/headerSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/btn_text"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_location"
            app:tint="@color/unirutas_primary"
            android:contentDescription="Icono de ubicación de municipio" />

        <TextView
            android:id="@+id/tv_section_titulo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre del Municipio"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingStart="12dp"
            android:textColor="@color/unirutas_text_dark" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_down"
            app:tint="@color/unirutas_icon_dark"
            android:contentDescription="Flecha de expansión" />
    </LinearLayout>

    <!-- Contenedor de rutas, vertical (donde se infla item_ruta) -->
    <LinearLayout
        android:id="@+id/containerRutasAgrupadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:visibility="gone" />

</LinearLayout>