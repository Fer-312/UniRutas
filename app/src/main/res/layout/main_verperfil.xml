<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="24dp"
    android:paddingEnd="24dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp"
    android:background="@color/unirutas_background_light"
    android:id="@+id/tab4"
    >

    <!-- Foto de perfil -->
    <ImageView
        android:id="@+id/imgPerfil"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_user"
        android:scaleType="centerCrop"
        android:background="@drawable/bg_avatar_circle"
        android:padding="6dp"
        android:contentDescription="Foto de perfil del usuario"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Nombre del usuario -->
    <TextView
        android:id="@+id/txtNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Usuario"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/unirutas_text_dark"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/imgPerfil"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <!-- Card de Datos - Usando bg_card_white -->
    <LinearLayout
        android:id="@+id/cardDatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:padding="20dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/txtNombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Correo Electr贸nico -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_email"
                app:tint="@color/unirutas_primary"
                android:contentDescription="Icono de email" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Correo Electr贸nico"
                    android:textColor="@color/unirutas_text_dark"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tvCorreo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email@email.com"
                    android:textColor="@color/unirutas_text_dark"
                    android:textSize="15sp"/>

            </LinearLayout>
        </LinearLayout>
        <!-- Separador sutil -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#ECEFF1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            />

        <!-- Otros datos que se puedan mostrar (ejemplo: Rol) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="12dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_phone"
                app:tint="@color/unirutas_primary"
                android:contentDescription="Icono de telefono" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telefono"
                    android:textColor="@color/unirutas_text_dark"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/tvTelefono"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0000-0000"
                    android:textColor="@color/unirutas_text_dark"
                    android:textSize="15sp"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <!-- Bot贸n para editar perfil - Usando btn_primary -->
    <Button
        android:id="@+id/btnEditarPerfil"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_primary"
        android:text="Editar Perfil"
        android:textAllCaps="false"
        android:textColor="@color/unirutas_white"
        android:textSize="16sp"
        android:paddingTop="12dp"
        app:backgroundTint="@null"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardDatos" />

    <!-- Bot贸n de Historial - Usando btn_secondary -->
    <Button
        android:id="@+id/btnHistorial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_secondary"
        android:text="Historial de Rutas"
        android:textAllCaps="false"
        app:backgroundTint="@null"
        android:textColor="@color/unirutas_primary"
        android:textSize="16sp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnEditarPerfil" />

</androidx.constraintlayout.widget.ConstraintLayout>