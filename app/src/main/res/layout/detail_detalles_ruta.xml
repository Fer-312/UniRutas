<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.main.detail_detalles_ruta"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/unirutas_white"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/unirutas_white"
        android:fitsSystemWindows="true" />
    <include layout="@layout/reutilizable_encabezado_detail"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/unirutas_background_light"

        >

        <LinearLayout
            android:id="@+id/detallesRuta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".ui.main.detail_detalles_ruta">



            <!-- Contenedor principal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp"
                android:background="@drawable/bg_card_white"
                android:padding="16dp">

                <!-- Imagen -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="180dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_bus"
                        android:contentDescription="Microbus Image"
                        android:background="@drawable/bg_image_rounded" />

                    <!-- Overlay gradient oscuro en la parte inferior -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/gradient_dark_overlay" />
                </FrameLayout>

                <!-- Ruta con diseño mejorado -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_route_container"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <!-- Origen -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ORIGEN"
                                android:textSize="10sp"
                                android:textColor="@color/unirutas_secondary"
                                android:textStyle="bold"
                                android:letterSpacing="0.15" />

                            <TextView
                                android:id="@+id/tvRutaOrigen"
                                android:text="San Salvador"
                                android:textSize="16sp"
                                android:textColor="@color/unirutas_text_dark"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:gravity="center" />
                        </LinearLayout>

                        <!-- Flecha animada -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="58dp"
                                android:layout_height="48dp"
                                android:layout_marginTop="2dp"
                                android:src="@drawable/ic_arrow_forward"
                                app:tint="@color/unirutas_accent"
                                android:contentDescription="Arrow" />
                        </LinearLayout>

                        <!-- Destino -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DESTINO"
                                android:textSize="10sp"
                                android:textColor="@color/unirutas_secondary"
                                android:textStyle="bold"
                                android:letterSpacing="0.15" />

                            <TextView
                                android:id="@+id/tvRutaDestino"
                                android:text="UNICAES"
                                android:textSize="16sp"
                                android:textColor="@color/unirutas_text_dark"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="6dp"
                                android:maxLines="2"
                                android:ellipsize="end"
                                android:gravity="center" />
                        </LinearLayout>

                        <!-- TextView oculto para compatibilidad -->
                        <TextView
                            android:id="@+id/tvFlecha"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Badge inscrito -->
                <LinearLayout
                    android:id="@+id/tvinscrito"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_badge_warning"
                    android:padding="14dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check_circle"
                        app:tint="@color/unirutas_white"
                        android:contentDescription="Check" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="¡Estás inscrito en esta ruta!"
                        android:textColor="@color/unirutas_white"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Información detallada -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_info_container"
                    android:padding="16dp">

                    <!-- Estado -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_info_outline"
                            app:tint="@color/unirutas_icon_dark"
                            android:contentDescription="Status Icon" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Estado"
                            android:textColor="@color/unirutas_text_dark"
                            android:textSize="14sp"
                            android:alpha="0.7" />

                        <TextView
                            android:id="@+id/tvDEstado"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_badge_green"
                            android:paddingHorizontal="14dp"
                            android:paddingVertical="6dp"
                            android:text="Disponible"
                            android:textColor="@color/unirutas_white"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textAllCaps="true"
                            android:letterSpacing="0.05" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E8ECF0"
                        android:layout_marginVertical="4dp" />

                    <!-- Tiempo restante -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_timer"
                            app:tint="@color/unirutas_icon_dark"
                            android:contentDescription="Time Icon" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Tiempo restante"
                            android:textColor="@color/unirutas_text_dark"
                            android:textSize="14sp"
                            android:alpha="0.7" />

                        <TextView
                            android:id="@+id/tvTiempoRestante"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1 h 15 min"
                            android:textColor="@color/unirutas_text_dark"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E8ECF0"
                        android:layout_marginVertical="4dp" />

                    <!-- Hora de salida -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_schedule"
                            app:tint="@color/unirutas_icon_dark"
                            android:contentDescription="Schedule Icon" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Hora de salida"
                            android:textColor="@color/unirutas_text_dark"
                            android:textSize="14sp"
                            android:alpha="0.7" />

                        <TextView
                            android:id="@+id/tvHoraSal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="8:30 AM"
                            android:textColor="@color/unirutas_text_dark"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E8ECF0"
                        android:layout_marginVertical="4dp" />

                    <!-- Tarifa -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingVertical="10dp">

                        <ImageView
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:src="@drawable/ic_attach_money"
                            app:tint="@color/unirutas_icon_dark"
                            android:contentDescription="Price Icon" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="12dp"
                            android:text="Tarifa"
                            android:textColor="@color/unirutas_text_dark"
                            android:textSize="14sp"
                            android:alpha="0.7" />

                        <TextView
                            android:id="@+id/tvTarifa"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$1.5"
                            android:textColor="@color/unirutas_secondary"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Destinos -->
                <LinearLayout
                    android:id="@+id/containerDestinos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_card_orange_dashed"
                    android:padding="16dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_location_on"
                            app:tint="@color/unirutas_accent"
                            android:contentDescription="Location" />

                        <TextView
                            android:id="@+id/tvRutalabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="Destinos"
                            android:textColor="@color/unirutas_text_dark"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Información del Motorista -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_card_blue_gradient"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/InfoMotorista"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        android:onClick="infomotorista"
                        android:paddingVertical="4dp">

                        <!-- Avatar circular -->
                        <FrameLayout
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:background="@drawable/bg_avatar_circle">

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_user"
                                app:tint="@color/unirutas_primary"
                                android:contentDescription="Driver Icon" />
                        </FrameLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="14dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="MOTORISTA"
                                android:textColor="@color/unirutas_secondary"
                                android:textSize="11sp"
                                android:textStyle="bold"
                                android:letterSpacing="0.1" />

                            <TextView
                                android:id="@+id/tvDriverNombre"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Carlos López"
                                android:textColor="@color/unirutas_text_dark"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_chevron_right"
                            app:tint="@color/unirutas_icon_dark"
                            android:alpha="0.4"
                            android:contentDescription="View details" />
                    </LinearLayout>

                    <!-- Separador -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E8ECF0"
                        android:layout_marginVertical="14dp" />

                    <!-- Placa -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_directions_car"
                            app:tint="@color/unirutas_icon_dark"
                            android:contentDescription="License Plate" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp"
                            android:text="Número de placa"
                            android:textColor="@color/unirutas_text_dark"
                            android:textSize="13sp"
                            android:alpha="0.7" />

                        <TextView
                            android:id="@+id/tvPlaca"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_placa"
                            android:paddingHorizontal="12dp"
                            android:paddingVertical="6dp"
                            android:text="ABC 123"
                            android:textColor="@color/unirutas_text_dark"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:fontFamily="monospace" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Botones de acción -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="24dp">

                <!-- Botón principal: Inscribirse -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btnInscribirse"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Inscribirse"
                        android:textColor="@color/unirutas_white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:letterSpacing="0.02"
                        android:background="@drawable/btn_primary"
                        android:elevation="4dp"
                        app:backgroundTint="@null"
                        android:stateListAnimator="@null" />
                </FrameLayout>

                <!-- Botón secundario: Ver Mapa -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="Ver Mapa"
                        android:textColor="@color/unirutas_primary"
                        android:background="@drawable/btn_secondary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAllCaps="false"
                        android:letterSpacing="0.02"
                        app:backgroundTint="@null"
                        android:stateListAnimator="@null" />
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
