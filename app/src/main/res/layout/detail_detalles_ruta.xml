<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detallesRuta"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.detail_detalles_ruta"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    >
    <!-- Card Content -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/reutilizable_encabezado_detail"
            />

        <!-- Header Image Placeholder -->
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@drawable/ic_bus"
            android:scaleType="centerCrop"
            android:contentDescription="Microbus Image"
            android:background="?attr/selectableItemBackground" />

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvRutaOrigen"
                android:text="Ruta San Salvador "
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvFlecha"
                android:text=" ➡ "
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_toEndOf="@id/tvRutaOrigen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvRutaDestino"
                android:text=" UNICAES"
                android:textSize="18sp"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_toEndOf="@id/tvFlecha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <!-- Status Row -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Estado:"
                android:textSize="14sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvDEstado"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disponible"
                android:textSize="14sp"
                android:layout_marginStart="16dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiempo Restante: "
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp" />
            <TextView
                android:id="@+id/tvTiempoRestante"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 hora 15 min"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="8dp" />

        </RelativeLayout>


        <!-- Departure Time -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hora de Salida:"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />
            <TextView
                android:id="@+id/tvHoraSal"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:30 AM"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarifa:"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />
            <TextView
                android:id="@+id/tvTarifa"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$1.5"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />
        </RelativeLayout>



        <!-- Fare -->


        <!-- Driver Information -->
        <LinearLayout
            android:id="@+id/InfoMotorista"
            android:onClick="infomotorista"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center">

            <ImageView
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:src="@drawable/ic_user"
                android:contentDescription="Driver Icon" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Motorista:"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginStart="8dp" />

            <TextView
                android:id="@+id/tvDriverNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Carlos López"
                android:textSize="14sp"
                android:textColor="#333333"
                android:layout_marginStart="3dp" />
        </LinearLayout>

        <!-- Plate Number -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Número de Placa: "
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />
            <TextView
                android:id="@+id/tvPlaca"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABC 123"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentBottom="true"
                android:paddingBottom="30dp">
                <Button
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Inscribirse"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#6200EA"

                    android:layout_marginEnd="8dp"
                    app:cornerRadius="8dp" />

                <Button
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ver Mapa"
                    android:textColor="#6200EA"
                    android:backgroundTint="#E0E0E0"
                    app:cornerRadius="8dp" />
            </LinearLayout>

        </RelativeLayout>






    </LinearLayout>
</LinearLayout>