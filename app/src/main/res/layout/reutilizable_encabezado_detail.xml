<?xml version="1.0" encoding="utf-8"?>
<!-- Encabezado de Detalle: Botón de regresar y título -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    >
    <ImageButton
        android:id="@+id/btnregresar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:onClick="Return"
        android:contentDescription="botón de regresar"
        android:background="@drawable/btn_text"
        android:src="@drawable/ic_arrow_return"
        app:tint="@color/unirutas_text_dark"
        tools:ignore="TouchTargetSizeCheck"/>

    <TextView
        android:layout_marginStart="8dp"
        android:id="@+id/tvEncabezado"
        android:text="Detalles"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/unirutas_text_dark"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="40dp"/>

</LinearLayout>