<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detail_detalles_horarios"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/unirutas_background_light"
    tools:context=".ui.main.detail_detalles_Horarios">

    <!-- Header Section (Ocupa tod el ancho) -->
    <include
        layout="@layout/reutilizable_encabezado_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/sections_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp">

            <!-- Card: Horario Destacado -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_card_blue_gradient"
                android:padding="20dp"
                android:layout_marginBottom="24dp"
                android:elevation="2dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_schedule"
                    app:tint="@color/unirutas_primary"
                    android:layout_marginEnd="12dp"
                    android:contentDescription="Icono de reloj" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horario Seleccionado:"
                    android:textSize="18sp"
                    android:textStyle="normal"
                    android:textColor="@color/unirutas_text_dark" />

                <TextView
                    android:id="@+id/tvHorarioGeneral"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="8:00 AM"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="end"
                    android:textColor="@color/unirutas_primary" />
            </LinearLayout>

            <!-- Sección: Rutas Entrantes (Header) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rutas Entrantes para este Horario"
                android:textStyle="bold"
                android:textColor="@color/unirutas_text_dark"
                android:textSize="18sp"
                android:layout_marginBottom="12dp" />

            <!-- Mensaje de No Rutas -->
            <TextView
                android:id="@+id/msjEntrantes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="No hay rutas para este horario"
                android:textSize="16sp"
                android:textColor="@color/unirutas_text_dark"
                android:visibility="gone"
                tools:visibility="visible"/>

            <!-- Contenedor para rutas entrantes dinámicas -->
            <LinearLayout
                android:id="@+id/containerRutasInscritas2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>