<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/detail_detalles_horarios"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="16dp"
    tools:context=".ui.main.detail_detalles_Horarios">

    <!-- Header Section -->
    <include
        layout="@layout/reutilizable_encabezado_detail"
        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/sections_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Horario: "
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#212121"/>
                <TextView
                    android:id="@+id/tvHorarioGeneral"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8:00 "
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentEnd="true"

                    android:textColor="#212121"/>
            </RelativeLayout>

            <!-- SecciÃ³n: Rutas Inscritas -->
            <TextView
                android:layout_marginTop="24dp"
                android:layout_marginStart="5dp"
                android:text="Rutas Salientes"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--Etiquetas de las rutas inscritas -->
            <!-- Ruta1 1 -->
            <LinearLayout
                android:id="@+id/containerRutasInscritas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

            <TextView
                android:layout_marginTop="24dp"
                android:layout_marginStart="5dp"
                android:text="Rutas Entrantes"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--Etiquetas de las rutas inscritas -->
            <!-- Ruta1 1 -->
            <LinearLayout
                android:id="@+id/containerRutasInscritas2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </LinearLayout>
    </ScrollView>








</LinearLayout>